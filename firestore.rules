rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // users コレクション
    match /users/{uid} {

      // Entries
      match /entries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }

      // Tags
      match /tags/{tagId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }

      // Comments
      match /comments/{commentId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
